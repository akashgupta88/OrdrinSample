<h1>Welcome to the OrdrIn Sample</h1>
<h2>Please enter your address:</h2>

<%= form_tag(restaurant_index_path, method: 'get') do %>
  <p>
    <%= label_tag "Street" %>
    <%= text_field_tag :street_address %>
  </p>
  <p>
    <%= label_tag "City" %>
    <%= text_field_tag :city %>
  </p>
  <p>
    <%= label_tag "State" %>
    <%= text_field_tag :state %>
  </p>
  <p>
    <%= label_tag "Zip" %>
    <%= text_field_tag :zip %>
  </p>
  <p>
    <%= label_tag "Phone" %>
    <%= text_field_tag :phone %>
  </p>
  <p>
    <%= submit_tag "Search" %>
  </p>
<% end %>

